<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/debug_dev_settings"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:text="DEV_SETTINGS" />

        <Button
            android:id="@+id/debug_recent"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:text="SHOW_RECENTS" />

        <Button
            android:id="@+id/debug_expand_sb"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:text="EXPAND_STATUSBAR" />

        <Button
            android:id="@+id/debug_reboot"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:text="REBOOT" />

        <Button
            android:id="@+id/debug_poweroff"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:text="POWEROFF" />

        <Button
            android:id="@+id/debug_clear"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:text="CLEAR" />

        <Button
            android:id="@+id/debug_test"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:text="TEST" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>